<!DOCTYPE html>
<html lang="en-US" class="h-full antialiased">
  <head>
    {% include meta.liquid %}
    <link rel="stylesheet" href="{{ "/assets/css/main.css?v=5" | relative_url }}">
    <link rel="stylesheet" href="{{ "/assets/css/rouge.css" | relative_url }}">
    <script src="{{ "/assets/javascripts/toggler.js" | relative_url }}"></script>
    {% if jekyll.environment == "production" %}
      <script src="https://cdn.usefathom.com/script.js" data-site="{{ site.fathom }}" defer></script>
    {% endif %}
  </head>
  <body class="flex h-full bg-gray-50">
    <div class="flex w-full">
      <div class="fixed inset-0 flex justify-center sm:px-8">
        <div class="flex w-full max-w-7xl lg:px-8">
          <div class="w-full bg-white ring-1 ring-gray-100"></div>
        </div>
      </div>
      <div class="relative flex w-full flex-col">
        {% include header.liquid %}
        <main class="flex-auto">
          {{ content }}
        </main>
        {% include footer.liquid %}
      </div>
    </div>

  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-GNPQ3MRD65"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-GNPQ3MRD65');
  </script>
  </body>
</html>
